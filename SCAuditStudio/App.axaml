<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:SCAuditStudio"
             x:Class="SCAuditStudio.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
      <FluentTheme Mode="{Binding selectedTheme.ThemeMode}"/>
      <StyleInclude Source="/Design/Styles/Window.axaml"/>
      <StyleInclude Source="/Design/Styles/Menu.axaml"/>
      <StyleInclude Source="/Design/Styles/TreeDataGrid.axaml"/>
      <StyleInclude Source="/Design/Styles/TabControl.axaml"/>
      <StyleInclude Source="/Design/Styles/SettingsMenu.axaml"/>
    </Application.Styles>
</Application>
